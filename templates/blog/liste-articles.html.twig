{% extends 'base.html.twig' %}

{% block title %}Hello {{controller_name }}!{% endblock %}

{% block body %}
  <section class="articles" style="margin-top:20px;"> 
     <tbody>
    <table class="table table-hover">
  
        <tr class="table-active">
            <th scope="row" style="text-align:right; "><button type="button" class="btn btn-secondary"><a class="  nav-link " href="/blog/new" style="color:white;" onmouseover="this.style.color='#FFFF99' "; onmouseout="this.style.color='white';"><b>Ajouter un article</b></a></button></th>
        </tr>  
    </table>
  </section>

  <section class="articles"> 
        <table class="table table-hover">
