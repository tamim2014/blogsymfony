{% extends 'base.html.twig' %}

     
{% block body %}
     <h4>Inscription sur le site</h4>
     {{  form_start(form) }}
     {{  form_row(form.username, {'label':'Nom d\'utilisateur', 'attr':{'placeholder':'Votre nom ...'}}) }}
     {{  form_row(form.email, {'label':'Adresse email' , 'attr':{'placeholder':'Votre adresse email ...'}}) }} 
     {{  form_row(form.password, {'label':'Mot de passe ' , 'attr':{'placeholder':'Votre mot de passe ...'}}) }}
     {{  form_row(form.confirm_password, {'label':'Confirmation' , 'attr':{'placeholder':'Veuillez-repeter votre mot de passe ...'}}) }}
      <button type="submit" class="btn btn-success"> Inscription !</button>
      
     {{  form_end(form) }}


{% endblock %}
